<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AllFilter</filter-name>
        <filter-class>filter.AllFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AllFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>test.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadServlet</servlet-name>
        <servlet-class>controller.LoadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>controller.MainPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SavedPageServlet</servlet-name>
        <servlet-class>controller.SavedPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPageServlet</servlet-name>
        <servlet-class>controller.EditPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadServlet</servlet-name>
        <url-pattern>/LoadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SavedPageServlet</servlet-name>
        <url-pattern>/saved</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPageServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/404-page.html</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
